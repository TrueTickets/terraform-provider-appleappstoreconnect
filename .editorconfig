; https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[{go.mod,go.sum,*.go,*.html}]
max_line_length = 120

[*.md]
indent_style = space
max_line_length = 72

[*.py]
indent_style = space
max_line_length = 79

[*.{yaml,yml}]
indent_style = space

[*.proto]
indent_style = space
indent_size = 2
